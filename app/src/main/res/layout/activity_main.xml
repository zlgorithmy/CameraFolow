<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <TextureView
        android:id="@+id/mCameraBackPreview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextureView
        android:id="@+id/mCameraFrontPreview"
        android:layout_width="640px"
        android:layout_height="480px"
        tools:ignore="PxUsage" />

    <com.shenlai.cameraFollow.widget.FaceRectView
        android:id="@+id/mFaceRectView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.shenlai.cameraFollow.widget.FaceRectView
        android:id="@+id/mFaceRectView1"
        android:layout_width="640px"
        android:layout_height="480px"
        tools:ignore="PxUsage" />

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="500dp"
        android:layout_gravity="end|bottom"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="start"
            android:text="@string/start" />

        <EditText
            android:id="@+id/XScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="水平角度0"
            android:inputType="number"
            android:text="40" />

        <EditText
            android:id="@+id/YScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="垂直角度0"
            android:inputType="number"
            android:text="30" />

        <EditText
            android:id="@+id/XXScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="水平角度1"
            android:inputType="number"
            android:text="5" />

        <EditText
            android:id="@+id/YYScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="垂直角度1"
            android:inputType="number"
            android:text="5" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="resetMotor"
            android:text="@string/reset" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="resetMotor0"
            android:text="@string/reset" />
    </LinearLayout>

</FrameLayout>